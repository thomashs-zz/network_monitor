<!DOCTYPE html>
<html>
<head>
  <title>NetworkMonitor</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Network Manager", root_path, :class => 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          	<% @devices.each do |d| %>
            <li<%= " class=active" if d == @device %>>
            	<%= link_to d.name,device_path(d) %>
            </li>
            <% end %>
            <li><%= link_to "Add Device",new_device_path, :class => 'text-success' %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- Begin page content -->
    <div class="container content">
      <% if notice %>
      <div class="alert alert-success alert-top">
        <i class="icon-exclamation-sign"></i>
        <%= notice %>
      </div>
      <% end %>
      <% if alert %>
      <div class="alert alert-danger alert-top">
        <i class="icon-remove-sign"></i>
        <%= alert %>
      </div>
      <% end %>
    	<%= yield %>
    </div>

</body>
</html>